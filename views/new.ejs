<%- include("partials/header.ejs") %> 

<div class="container center-align">
  <!-- Page Content goes here -->  
   <h1>Create a new post :)</h1>
</div>

<!-- text area - WILL auto resize to the text inside -->
<div class="row container">
  <form action="/posts" method="post" class="col s12">
    <div class="row">
      <div class="input-field col s4 ">
        <input id="post_title" type="text" name="title" class="validate">
        <label for="post_title">Post Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s7">
        <textarea id="textarea1" class="materialize-textarea" name="content"></textarea>
        <label for="textarea1">Content</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </form>
</div>        